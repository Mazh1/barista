-http_methods = { get:'GET', post:'POST', put:'PUT', patch:'PATCH', del:'DELETE', options:'OPTIONS' }
-def partial(path); Haml::Engine.new(File.read(path)).render; end
!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %title Barista
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}
    %script{src: "//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js", type: "text/javascript", charset: "utf-8"}
    %script{src: "prism.js"}
    %script{src: "./bower_components/barista/dist/barista.js"}
    %script{src: "./bower_components/coffeescript/extras/coffee-script.js"}
    %script{src: "./bower_components/jquery-cookie/jquery.cookie.js"}
    %link{href: "prism.css", rel: "stylesheet", title: "Default", type: "text/css"}/
    %script{type: "text/coffeescript"}
      = File.read 'script/demo.coffee'
    %script{type: "text/coffeescript"}
      = File.read 'inline.coffee'
    %link{href: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", rel: "stylesheet"}/
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"}
    %link{href: "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", rel: "stylesheet"}/
    %link{href: "//fonts.googleapis.com/css?family=Swanky+and+Moo+Moo", rel: "stylesheet", type: "text/css"}/
    %link{href: "//fonts.googleapis.com/css?family=Open+Sans", rel: "stylesheet", type: "text/css"}/
    %link{href: "stylesheets/screen.css", rel: "stylesheet", title: "Default", type: "text/css"}/

  %body{"data-lang" => "javascript", "data-spy" => "scroll", "data-target" => "#side-nav", "data-offset" => 100}
    = partial 'templates/demo.haml'
    = partial 'templates/nav.haml'
    .jumbotron{"data-offset-top" => "450", "data-spy" => "affix"}
      .container
        %h1 Barista
        %p
          A simple, powerful router
          %br>/
          for node.js and the browser
        %p
          %a.btn.btn-default{href: "https://github.com/kieran/barista", role: "button"} Github
          %a.btn.btn-default{href: "https://www.npmjs.org/package/barista", role: "button"} Npm
          -# %a.btn.btn-default{href: "https://www.npmjs.org/package/barista", role: "button"} Bower
    .container
      #docs.row
        .col-md-9
          = partial 'templates/overview.haml'
          = partial 'templates/install.haml'
          = partial 'templates/routes.haml'
          = partial 'templates/resources.haml'
          = partial 'templates/resolution.haml'
          = partial 'templates/generation.haml'
          #other
            %h2 TODOs
            %ul
              %li
                %a{href: 'https://github.com/kieran/barista/issues/22'}
                  Add namespace support
              %li
                %a{href: 'https://github.com/kieran/barista/issues/27'}
                  Add support for named generators
              %li
                %a{href: 'https://github.com/kieran/barista/issues/24'}
                  Customizable resources
            %h2 Things I forgot...
            %ul
              %li
                \...might be
                %a{href: './docs/router.html'}
                  in the /docs folder...
              %li
                \...or might not exist at all.
            %h2 Shit's broken!
            %p Shit happens.
            %p
              Write a test that fails and add it to the tests folder,
              %a{href: 'https://github.com/kieran/barista/issues'} then create an issue!
            %p
              Patches welcome :-)
            %h2 Who tf are you?
            %p
              I'm
              %a{href: 'http://kieran.ca'} Kieran Huggins
              in
              %a{href: 'http://i.imgur.com/r0iZXmC.png'} Toronto, Canada.
        .col-md-3
          = partial 'templates/side_nav.haml'
